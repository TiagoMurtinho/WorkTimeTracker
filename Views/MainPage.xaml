<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkTimeTracker.ViewModels"
             x:Class="WorkTimeTracker.Views.MainPage"
             x:DataType="vm:MainPageViewModel"
             BackgroundColor="#FFFFFF"
             Title="Work Time Tracker">

    <VerticalStackLayout Padding="60" Spacing="30">

        <!-- Topo: Relógio digital -->
        <Border StrokeShape="RoundRectangle 50"
                BackgroundColor="#F0F0F0"
                StrokeThickness="0"
                Padding="20"
                WidthRequest="350"
                Margin="0,20,0,0"
                HorizontalOptions="Center"
                VerticalOptions="Start">

            <VerticalStackLayout>
                <Label Text="{Binding TimeText}"
                       FontSize="64"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#212121"/>
                <Label Text="{Binding DateText}"
                       FontSize="28"
                       HorizontalOptions="Center"
                       TextColor="#616161"/>
            </VerticalStackLayout>
        </Border>

        <!-- Meio: contador de tempo grande -->
        <Label Text="{Binding ElapsedTime, StringFormat='{0:hh\\:mm\\:ss}'}"
               FontSize="70"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#212121"
               Margin="0,40,0,40"/>

        <!-- Base: Botão START/STOP estiloso -->
        <Button Text="{Binding ButtonText}"
                BackgroundColor="{Binding ButtonColor}"
                TextColor="White"
                FontSize="32"
                WidthRequest="280"
                HeightRequest="90"
                CornerRadius="45"
                Command="{Binding ToggleTimerCommand}"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>