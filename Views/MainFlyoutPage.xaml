<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:WorkTimeTracker.Views"
            x:Class="WorkTimeTracker.Views.MainFlyoutPage"
            Title="Work Time Tracker">

    <!-- Menu lateral (Flyout) -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu" BackgroundColor="White">
            <StackLayout Padding="20" Spacing="20">
                <Label Text="Work Time Tracker" FontSize="24" FontAttributes="Bold" />
                <Button Text="Definições" Clicked="OnSettingsClicked"/>
                <Button Text="Gestão" Clicked="OnManagementClicked"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- Conteúdo principal (Detail) -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>